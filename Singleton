class Singleton:
    _instance = None

    def __new__(cls):
        if cls._instance is None:
            cls._instance = super(Singleton, cls).__new__(cls)
        return cls._instance

# Використання
singleton1 = Singleton()
singleton2 = Singleton()

print(id(singleton1) == id(singleton2))  # Виведе: True, обидва змінні вказують на один і той же об'єкт
