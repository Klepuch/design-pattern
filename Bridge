class Color:
    def fill(self):
        pass

class Red(Color):
    def fill(self):
        return "Червоний колір"

class Green(Color):
    def fill(self):
        return "Зелений колір"

class Shape:
    def draw(self):
        pass

class Circle(Shape):
    def __init__(self, color: Color):
        self.color = color

    def draw(self):
        return f"Намалювати круг: {self.color.fill()}"

class Square(Shape):
    def __init__(self, color: Color):
        self.color = color

    def draw(self):
        return f"Намалювати квадрат: {self.color.fill()}"

# Використання
red_circle = Circle(Red())
green_square = Square(Green())

print(red_circle.draw())   # Виведе: Намалювати круг: Червоний колір
print(green_square.draw())  # Виведе: Намалювати квадрат: Зелений колір
