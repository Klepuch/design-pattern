class Component:
    def operation(self):
        pass

class Leaf(Component):
    def operation(self):
        return "Листок"

class Composite(Component):
    def __init__(self):
        self.children = []

    def add(self, component: Component):
        self.children.append(component)

    def remove(self, component: Component):
        self.children.remove(component)

    def operation(self):
        results = []
        for child in self.children:
            results.append(child.operation())
        return "Компонент: [" + ", ".join(results) + "]"

# Використання
leaf1 = Leaf()
leaf2 = Leaf()
composite = Composite()

composite.add(leaf1)
composite.add(leaf2)

print(composite.operation())  # Виведе: Компонент: [Листок, Листок]
